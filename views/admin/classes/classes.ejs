                                </div>
                                 <div class="form-group col-lg-6">
                                    <label>Name</label>
                                    <input type="text" class="form-control" value="${data[0].annual_fee}" name="annual_fee">
                                </div>
                                
                            </div>
                            <div align="center">
                               <input type="submit" class="btn btn-success"
															value="Update">
															
														
                            </div>
                        </form>`;
            $("#editClassesDiv").html(formDetails);
          
        },
      });
    } catch (err) {
      console.error(err);
    }
  }
  
   function deleteClasses(classesId) {
    try {
     
      $("#deleteClassesDiv").html("");
      $("#deleteClassesModal").modal("toggle");
   
          
            let formDetails = ``;
            formDetails += `
                    <input type="hidden" class="form-control" name="classesId" id="classesId" value="${classesId}">
                   
                    
