                                </div>
								   <div class="form-group col-lg-6">
                                    <label>To Date</label>
                                    <input type="date" value="${data[0].to_date}" class="form-control" name="to_date">
                                </div>
                               
                            </div>
                            <div align="center">
                               <input type="submit" class="btn btn-success"
															value="Update">
															
														
                            </div>
                        </form>`;
            $("#editLeaveDiv").html(formDetails);
          
        },
      });
    } catch (err) {
      console.error(err);
    }
  }
  
