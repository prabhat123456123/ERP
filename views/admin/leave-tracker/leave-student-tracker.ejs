        { data: "reason" },
        { data: "from_date" },
        { data: "to_date" },
        { data: "leave_status" },
        { data: "action" },
	],
		createdRow:function(row, data, rowIndex)
		{
			$.each($('td', row), function(colIndex){
				if(colIndex == 2)
				{
					$(this).attr('data-name', 'reason');
					$(this).attr('class', 'reason');
					$(this).attr('data-type', 'text');
					$(this).attr('data-pk', data.id);
				}
				if(colIndex == 3)
				{
					$(this).attr('data-name', 'from_date');
					$(this).attr('class', 'from_date');
					$(this).attr('data-type', 'date');
					$(this).attr('data-pk', data.id);
				}
				if(colIndex == 4)
				{
					$(this).attr('data-name', 'to_date');
					$(this).attr('class', 'to_date');
					$(this).attr('data-type', 'date');
					$(this).attr('data-pk', data.id);
				}
				if(colIndex == 5)
				{
					$(this).attr('data-name', 'leave_status');
					$(this).attr('class', 'leave_status');
					$(this).attr('data-type', 'select');
					$(this).attr('data-pk', data.id);
				}
			});
		}
	});

