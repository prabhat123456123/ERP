function viewComplaint(complaintId) {
    try {
     
      $("#viewComplaintDiv").html("");
      $("#viewComplaintModal").modal("toggle");
      $.ajax({
         url: `/complaint/view-complaint-byid`,
         type: "post",
         data:{complaintId:complaintId},
         dataType: "json",
         cache: false,
         success: function (data) {
    console.log(data);
            let formDetails = ``;
            formDetails += `<table class="table table-bordered table-striped"> 
             
               <tr><td>Student Name</td><td>${data[0].sname}</td></tr>
               <tr><td>Class</td><td>${data[0].class_name}</td></tr>
               <tr><td>Complaint</td><td>${data[0].description}</td></tr>
          <tr><td>Complaint By ${data[0].role=="school" ? "(School)" : "(faculty)"}</td><td> ${ data[0].role=="school" ? data[0].school_name : data[0].fname} %></td></tr>
            
               </table>`;
            $("#viewComplaintDiv").html(formDetails);
          
        },
      });
    } catch (err) {
      console.error(err);
    }
  }


 function editComplaint(complaintId) {
    try {
     
      $("#editComplaintDiv").html("");
      $("#editComplaintModal").modal("toggle");
      $.ajax({
         url: `/complaint/fetch-complaint-byid`,
         type: "post",
