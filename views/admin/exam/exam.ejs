                            <div class="row">
                                 <div class="form-group col-lg-6">
                                    <label>Exam</label>
                                    <input type="text" id="exam_name" value="${data.data[0].exam_name}" class="form-control" name="exam_name">
                                </div>
                                 <div class="form-group col-lg-6">
                                    <label>Class</label>
                                   <select name="class_id" id="class_id" class="form-control">
                                    ${option}
                                   </select>
                                </div>
                                  <div class="form-group col-lg-6">
                                    <label>Type of Exam</label>
                                   <select name="type_exam" id="type_exam" class="form-control">
                                    <option value="">Please Select</option>
                                    <option value="practice"${data.data[0].exam_type=="practice"?'selected':""}>Practice</option>
                                    <option value="online"${data.data[0].exam_type=="online"?'selected':""}>Online</option>
                                    <option value="quiz"${data.data[0].exam_type=="quiz"?'selected':""}>Quiz</option>
                                   </select>
                                </div>
                                    
                                  <div class="form-group col-lg-6">
                                    <label>Start Date</label>
                                    <input type="date" id="start_date" value="${data.data[0].start_date}" class="form-control" name="start_date">
                                </div>
                                 <div class="form-group col-lg-6">
                                    <label> End Date</label>
                                    <input type="date" id="end_date" value="${data.data[0].end_date}" class="form-control" name="end_date">
                                </div>
                                
                            </div>
                            <div align="center">
                               <button class="	btn btn-success waves-effect waves-light "
															data-callback="onSubmit" id="saveExam" data-action="submit">
															Update
														</button>
                            </div>
                        </form>`;
            $("#editExamDiv").html(formDetails);
          
        },
      });
    } catch (err) {
      console.error(err);
    }
  }
