         url: `/exam/fetch-exam-byid`,
         type: "post",
         data:{examId:examId,schoolId:schoolId,classId:classId},
         dataType: "json",
         cache: false,
         success: function (data) {
              let option;
        for(let i=0; i<data.classes.length; i++){
           option += `<option value="${data.classes[i].id}"${data.data[0].class_id==data.classes[i].id?'selected':""}>${data.classes[i].class_name}</option>`
        }
            let formDetails = ``;
            formDetails += `  <form action="/exam/update-exam-by-id" method="POST" >
                                   <input type="hidden"  value="${examId}" class="form-control" name="exam_id">
